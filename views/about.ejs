    <style>
      @import url("https://fonts.googleapis.com/css2?family=Piazzolla:ital,wght@0,200;0,300;0,400;0,900;1,700&display=swap");
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Piazzolla", serif;
      }
      :root {
        --main-bg: #1e272e;
        --main-color: #0097e6;
      }
      html {
        font-size: 62.5%;
      }
      body {
        height: 100vh;
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-image: linear-gradient(
        rgba(0, 0, 0, 0.4),
        rgba(0, 0, 0, 0.8),
        rgba(0, 0, 0, 0.4)
        ),
        url("img/pic12.jpg");
        background-size: cover;
        background-position: center;
        height: 100vh;
        background-attachment: fixed;
      }
      /* ************************************navbar styling************************ */
      .main_menu {
        background-color: var(--main-bg);
        z-index: 3;
      }
      .navbar {
        color: #fff;
        background-color: var(--main-bg);
        padding: 2rem 0;
        position: sticky;
      }
      .navbar li a {
        margin: 0 2rem;
        font-weight: bold;
      }
      .navbar a {
        color: #fff;
        font-size: 2.3rem;
      }
      .navbar ul li a:hover {
        color: var(--main-color);
      }
      .navbar-toggler {
        background-color: white;
        margin-right: 1rem;
      }
      .fa-university {
        transition: all linear;
        animation: rot 2s linear infinite;
        color: var(--main-color);
      }
      @keyframes rot {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
      .ban {
        color: var(--main-color);
      }
      .navbar-logo {
        font-weight: bold;
      }
      .navbar .navbar-logo {
        font-size: 3.5rem;
        letter-spacing: 0.5rem;
      }
      /* ******************************footer styling************************************* */
      .socialmedia {
        font-size: 2rem;
        text-align: center;
        padding-top: 1.5rem;
        color: black;
        background-color: rgb(219, 216, 216);
      }
      .social-icons i {
        margin: 0rem 1.5rem;
        transition: all;
        color: black;
      }
      .social-icons i:hover {
        transform: translateY(-1rem);
      }
      /* ***********************************about styling******************* */
    .outer{    
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    justify-items: center;
    font-family: 'Benne', serif;
    margin-top: 50px ;
    padding-bottom: 40px;
    opacity: 0.9;
    z-index: 1;
    font-size: 2.5rem;
   }

  .box {
    border: 1px solid white;
    color: white;
    width: 80%;
    height: 100%;
    text-align: center;
    padding: 20px;
    z-index: 1;
  }
  .navbar-toggler{
    font-size:3px;
  }
      /* **************media query************************/
      @media (min-width: 0px) and (max-width: 350px) {
        .navbar .navbar-logo {
          font-size: 1.5rem;
          letter-spacing: normal;
        }
        .navbar a {
          font-size: 1rem;
        }
        .row2 {
          display: none;
        }
        .outer{
          font-size: 1.3rem;
        }
      }
      @media (min-width: 350px) and (max-width: 425px) {
        .navbar .navbar-logo {
          font-size: 1.5rem;
          letter-spacing: normal;
        }
        .navbar a {
          font-size: 1rem;
        }
        .row2 {
          display: none;
        }
        .outer{
          font-size: 1.8rem;
        }
      }
      @media (min-width: 425px) and (max-width: 800px) {
        .navbar .navbar-logo {
          font-size: 2.5rem;
          letter-spacing: normal;
        }
        .navbar a {
          font-size: 1.5rem;
        }
        .row2 {
          display: none;
        }
        .outer{
          font-size: 2.1rem;
        }
      }
      @media (min-width: 800px) and (max-width: 1000px) {
        .navbar .navbar-logo {
          font-size: 3rem;
          letter-spacing: normal;
        }
        .navbar a {
          font-size: 2.3rem;
        }
        .row2 {
          display: none;
        }
        .outer{
          font-size: 2rem;
        }
      }
      
    </style>
  </head>

